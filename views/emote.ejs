<!-- Vista Emocion -->

<!DOCTYPE html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    
    <!-- Custom styles for this template -->
    <link href="/css/headers.css" rel="stylesheet">


  </head>
  <body>
    <div class="bg-image logbg">
    <nav class="navbar navbar-expand-lg fixed-top p-3 mb-3 justify-content-between text-white paginaheader" style="background-color: #815176 ">
      <div class="container">
          <h3 class="col-lg-auto me-lg-auto mb-2 mb-md-0"><%= tituloPagina %></h3>

          <div class="dropdown">
            <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle dropdown-menu-right" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
              <img src="/img/logo.jpg" alt="mdo" width="32" height="32" class="rounded-circle">
            </a>
            <ul class="dropdown-menu dropdown-menu-end text-small" aria-labelledby="dropdownUser1">
              <li><a class="dropdown-item" href="/follow">Me siento...</a></li>
              <li><a class="dropdown-item" href="/calendario">Calendario</a></li>
              <li><a class="dropdown-item" href="/grafico">Estadisticas</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/logout">Salir</a></li>
            </ul>
          </div>
      </div>
    </nav>
    <main class="container p-5 text-white min-vh-100">
      <% if(error=='modSuccess'){ %> 
        <div class="my-5 alert alert-primary" role="alert">
          Modificado con éxito.
        </div>
        <% } %>
      <div class="my-5 p-5 text-center justify-content-center border rounded-3 border-dark border-bottom bg-dark text-white fill" >
        <h1 class="display-4 fw-bold">¿Cómo me sentía?</h1>
        <form action="/emoteupdate/<%= emoteId %>" method="post" >
        <div class="col-lg-6 mx-auto">
          <label for="fecha">Fecha:</label>
          <input type="text" id="fecha" name="fecha" value="<%= fecha %>" disabled><br><br>
          <p class="lead mb-4 mt-3">Aquí seleccionaste cómo te sentías:</p>
          <select class="form-select m-3" aria-label="Default select example" name="emote">
              <% for(var row in emotes) { %>
                <option value="<%= emotes[row].id %>"  <% if(currEmote==emotes[row].id){ %>selected<% } %>><%= emotes[row].desc %></option>
              <% } %>
          </select>
          <p class="lead mb-4 mt-4">¿Que describí?</p>
          <div class="m-1">
            <textarea class="form-control" name="desc" rows="3"><%= desc %></textarea>
          </div>
          <a class="mt-4 btn btn-primary" role="button" href="/follow">Me siento...</a>
          <br>
          <div class="btn-group m-2" role="group" aria-label="Basic example">
            <button class="btn btn-secondary" type="submit">Modificar</button>
            </form>
            <a href="/emotedelete?emoteid=<%= emoteId %>" type="button" class="btn btn-danger" >Eliminar</a>
          </div>
        </div>
      </div>
    </main>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
  </body>
</html>
